<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/background_gradient"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/logo_1" />


    </LinearLayout>

    <EditText
        android:id="@+id/studentNumber_"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_rounded_input"
        android:ems="10"
        android:gravity="center"
        android:hint="02000149243"
        android:inputType="number"
        android:textColor="@color/main_500"
        android:textSize="16dp" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/studentMovie_"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/background_rounded_input"
        android:entries="@array/movies"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/main_500" />

    <ImageView
        android:layout_width="320dp"
        android:layout_height="5dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/line_drawable" />

    <Button
        android:id="@+id/registerStudent"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_button"
        android:onClick="registerMethod"
        android:text="Register Student"
        android:textColor="@color/white"
        android:enabled="false"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/logo_ngs"/>


</LinearLayout>