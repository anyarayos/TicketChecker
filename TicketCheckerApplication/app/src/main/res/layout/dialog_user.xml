<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:tint="@color/main_500"
        app:srcCompat="@drawable/logo_1"/>

    <EditText
        android:id="@+id/checkerName_"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_rounded_input"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Checker Name"
        android:inputType="textPersonName"
        android:textColor="@color/main_500"
        android:textSize="16dp" />

    <Button
        android:id="@+id/saveChecker"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Save Checker Name"
        android:textAllCaps="false"
        android:textColor="@color/main_500"
        android:textStyle="bold"
        android:enabled="false"/>

</LinearLayout>